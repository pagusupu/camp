;; workspaces widget ;;
(defwidget workspaces_right []
  (box :orientation "v"
       :valign "start"
       :class "workspaces"
       (box :orientation "v"
            :spacing 5
	    :space-evenly "false"
	    :class "workspace_buttons"
	    (eventbox :cursor "pointer"
	      (button :onclick "bspc desktop -f 5"
	        (label :text "5"
		       :class "workspace_button1")))
	    (eventbox :cursor "pointer"
	      (button :onclick "bspc desktop -f 6"
	        (label :text "6"
		       :class "workspace_button2")))
	    (eventbox :cursor "pointer"
	      (button :onclick "bspc desktop -f 7"
	        (label :text "7"
		       :class "workspace_button3")))
	    (eventbox :cursor "pointer"
	      (button :onclick "bspc desktop -f 8"
	        (label :text "8"
		       :class "workspace_button4")))
)))
