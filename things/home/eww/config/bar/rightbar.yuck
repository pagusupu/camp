;; bar window ;;
(defwindow rightbar
  :geometry (geometry :x "-8px"
	              :y "0px"
		      :height "1064px"
		      :width "40px"
		      :anchor "center right")
  :reserve (struts :distance "48px"
	           :side "right")
  :monitor 1
  :stacking "bg"
  :windowtype "dock"
  :wm-ignore false
  :hexpand "false"
  :vexspand "false"
(bar_right))

