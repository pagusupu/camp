;; clock widget ;;
(defwidget time []
  (box :orientation "v"
       :class "time"
       :valign "end"
    (label :text hour :class "hour_class")
    (label :text min  :class "min_class")
    (label :text m    :class "m_class")
))
(defpoll hour :interval "1s"  "date '+%I'")
(defpoll min  :interval "1s"  "date '+%M'")
(defpoll m    :interval "30m" "date '+%p'")

;; workspaces widget ;;
(defwidget workspaces_left []
  (box :orientation "v"
       :valign "start"
       :class "workspaces"
       (box :orientation "v"
            :spacing 5
	    :space-evenly "false"
	    :class "workspace_buttons"
	    (eventbox :cursor "pointer"
	      (button :onclick "bspc desktop -f 1"
	        (label :text "1"
		       :class "workspace_button1")))
	    (eventbox :cursor "pointer"
	      (button :onclick "bspc desktop -f 2"
	        (label :text "2"
		       :class "workspace_button2")))
	    (eventbox :cursor "pointer"
	      (button :onclick "bspc desktop -f 3"
	        (label :text "3"
		       :class "workspace_button3")))
	    (eventbox :cursor "pointer"
	      (button :onclick "bspc desktop -f 4"
	        (label :text "4"
		       :class "workspace_button4")))
)))
