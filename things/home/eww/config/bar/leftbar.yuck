;; bar window ;;
(defwindow leftbar
  :geometry (geometry :x "8px"
	              :y "0px"
		      :height "1064px"
		      :width "40px"
		      :anchor "center left")
  :reserve (struts :distance "48px"
	           :side "left")
  :monitor 0
  :stacking "bg"
  :windowtype "dock"
  :wm-ignore false
  :hexpand "false"
  :vexspand "false"
(bar))

